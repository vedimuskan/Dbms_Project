<%- include("partials/header") -%>
<h1>Favourite</h1>
<%{data.forEach((item)=>{%>
    <h1><%= item.title %></h1>
    <h3><%= item.genre %></h3>
    <p><%= item.price %> $</p>
    <p><%= item.author %></p>
    <p><%= item.publisher %></p>
    <p><%= item.publish_date %></p>
    <form action="/fav/<%=item.book_id%>" method="post">
        <button type="submit">Remove fav</button>
    </form>
<%})}%>
<h3>Total Price : <%= sum %></h3>
<%- include("partials/footer") -%>